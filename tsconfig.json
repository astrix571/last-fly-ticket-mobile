{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@constants/*": ["constants/*"],
      "@assets/*": ["assets/*"],
      "@env": ["env.d.ts"]
    }
  },
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx"]
}

